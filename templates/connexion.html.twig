{% extends 'base.html.twig' %}

{% block title %}{{titre}}{% endblock %}

{% block body %}

    <main id="explo">
        <section class = formul>
            <div>
                <form action="#" method="post">
                    <h3>Demande {{titre}}</h3>

                    <!--Identifiant-->
                    <div>
                        <input type="text" id="identifiant" name="user_identifiant" placeholder="identifiant (Requis)" required/>
                    </div>

                    <!--Email-->
                    <div>
                        <input type="email" id="email" name="user_email" placeholder="Email (Requis)" required/>
                    </div>

                    <!--Mot de Passe-->
                    <div>
                        <input type="password" id="mdp" name="user_mdp" placeholder="Mot de Passe (Requis)" required/>
                    </div>
                    <div>
                        <input type="password" id="mdpV" name="user_mdpV" placeholder="Vérification Mot de Passe (Requis)" required/>
                    </div>

                    <!--Validation-->
                
                    <input type="submit" value="Envoyer"/>
                    {% if titre == "Inscription" %}
					    <p>Déjà un compte ? <a href="{{path('connexion', {route: 'connexion'})}}">Connectez-vous !</a></p>
                    {% else %}
                        <p>Pas de compte ? <a href="{{path('connexion', {route: 'connexion'})}}">Inscrivez-vous !</a></p>
					    <label for="connect">
						    <input type="checkbox" name="connect" id="connect" value="true"> Rester connecté ?
					    </label>
                    {% endif %}
				</div>
                </form>
            </div>
        </section>
    </main>

{% endblock %}