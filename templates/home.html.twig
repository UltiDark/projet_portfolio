        <!--Frise-->
        <section>
            <h2>Frise Chrono</h2>
            <div class="frise">
            <ol>                    
                {% for frise in frises  %}
                    <li>
                        <a href="#{{frise.getIdDiv}}Info">
                            <div id="{{frise.getIdDiv}}" class="{{frise.getIdClass.nom}}">
                                <time>{{frise.date.format('Y')}}</time>
                                {{frise.titre}}
                            </div>
                        </a>
                    </li>
                {% endfor %}
                <li>
                    <div>
                    </div>
                </li>
            </ol>
        </div>
        </section>

        <!--Formations-->
        {% for frise in frises %}
            {% if frise.contenu is not empty  %}
                <aside id="{{frise.getIdDiv}}Info" class="img-droite">
                    <div>
                        <p>{{frise.contenu}}</p>
                    </div>
                    <div><img src="<?=$value->image ?>"/></div>
                </aside >
            {% endif %}
        {% endfor %}

    </main>

