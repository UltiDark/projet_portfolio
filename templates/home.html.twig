        </section>

        <!--Frise-->
        <section>
            <h2>Frise Chrono
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="none" href="{{ path('listefrise')}}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-info-circle-fill dash" viewBox="0 0 16 16">
                        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
                        </svg>
                    </a>
                {% endif %}
            </h2>
            <div class="frise">
            <ol>                    
                {% for frise in frises  %}
                    <li>
                        <a href="#{{frise.getIdDiv}}Info">
                            <div id="{{frise.getIdDiv()}}" class="{{frise.getIdClasse.nom}} visible">
                                <time>{{frise.date.format('Y')}}</time>
                                <p>{{frise.nom}}</p>
                            </div>
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <div class="centre">
                                <a class="none" onclick="return confirm('Es-tu sûr de vouloir supprimer cet élément?');" href="{{ path( 'supfrise', {'id':frise.id}) }}?csrf={{csrf_token('delete' ~ frise.id)}}">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" class="bi bi-trash-fill trash" viewBox="0 0 16 16">
                                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
