                <li>
                    <div>
                    </div>
                </li>
                {% endif %}
            </ol>
        </div>
        </section>

        <!--Formations-->
        {% for frise in frises %}
            {% if frise.contenu is not empty %}
                <aside id="{{frise.getIdDiv}}Info" class="img-droite">
                    <div>
                        <p>{{frise.contenu}}</p>
                    </div>
                    <div><img src="{{asset(frise.lien)}}"/></div>
                </aside >
            {% endif %}
        {% endfor %}


        <div id="myModal" class="modal">
            <span class="close">&times;</span>
            <div>
                <form action ="{{ path('ajoutdomaine')}}" method="post">
                    <h2>Domaine</h2>
                    <!--Email-->
                    <div>
                        <p>Combien de Categorie ?</p>
                        <input type="number" value="" id="inputNombre" name="nombre" min="1" max="100" required/>
                    </div>
        
                    <!--Validation-->
                
                    <button class="" type="submit">Créer</button>
    
                </div>
                </form>
            </div>
        </div>

        
    </main>

