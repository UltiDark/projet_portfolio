                <li>
                    <div>
                    </div>
                </li>
                {% endif %}
            </ol>
        </div>
        </section>

        <!--Contenu Frise-->
        {% for frise in frises %}
            {% if frise.contenu is not empty %}
                <aside id="{{frise.getIdDiv}}Info" class="aside img-droite">
                    <div class="margin-droite">
                        <p>{{frise.contenu}}</p>
                    </div>
                    {% if frise.lien is not empty %}
                        <div><img src="{{asset(frise.lien)}}" alt="image invisible"/></div>
                    {% endif %}
                </aside >
            {% endif %}
        {% endfor %}


        <!--Modal Domaine Création-->
        <div id="myModal" class="modal">
            <span class="close">&times;</span>
            <div>
                <form action ="{{ path('ajoutdomaine')}}" method="post">
                    <h2>Domaine</h2>
                    <!--Catégorie-->
                    <div class="center">
                        <p>Combien de Categorie ?</p>
                        <input type="number" value="" id="inputNombre" name="nombre" min="1" max="100" required/>
                    </div>
        
                    <!--Validation-->
                    <button class="" type="submit">Créer</button>
    
                </form>
            </div>
        </div>

        
    </main>

